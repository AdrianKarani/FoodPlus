<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".AddDeliveryGuyActivity">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/session_location_label"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:text="Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/session_location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TvSets_no"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:text="Email"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/EtSets_no"
        android:inputType="textEmailAddress"
        android:hint="Enter email"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TvReps_no"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:text="Contacts"
        android:textSize="18sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/EtReps_no"
        android:inputType="number"
        android:hint="Enter Contacts"/>

</LinearLayout>



<Button
    android:id="@+id/add_session_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:text="Add Delivery Guy" />


</LinearLayout>